      <TextField fx:id="tfEmpleadoId" editable="false" layoutX="126.0" layoutY="245.0" prefHeight="32.0" prefWidth="191.0" promptText="Empledo Id" />
      <TextField fx:id="tfNombre" layoutX="125.0" layoutY="331.0" prefHeight="32.0" prefWidth="191.0" promptText="Ingrese el nombre" />
      <TextField fx:id="tfApellido" layoutX="125.0" layoutY="419.0" prefHeight="32.0" prefWidth="191.0" promptText="Ingrese el apellido" />
      <TextField fx:id="tfSueldo" layoutX="125.0" layoutY="501.0" prefHeight="32.0" prefWidth="191.0" promptText="Ingrese el sueldo" />
      <TextField fx:id="tfHoraEntrada" layoutX="125.0" layoutY="591.0" prefHeight="32.0" prefWidth="191.0" promptText="Ingrese la hora de entrada" />
      <TextField fx:id="tfHoraSalida" layoutX="125.0" layoutY="680.0" prefHeight="32.0" prefWidth="191.0" promptText="Ingrese la hora de salida" />
      <ComboBox fx:id="cmbCargo" layoutX="516.0" layoutY="245.0" prefHeight="32.0" prefWidth="191.0" />
