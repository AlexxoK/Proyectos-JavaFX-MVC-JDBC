<AnchorPane id="AnchorPane" prefHeight="750.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.diegomonterroso.controller.FormCategoriaProductoController">
   <children>
      <ImageView fitHeight="750.0" fitWidth="500.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../image/Fondo%20CategoriaProductos.png" />
         </image>
      </ImageView>
      <TextField fx:id="tfCategoriaProductoId" editable="false" layoutX="37.0" layoutY="144.0" prefHeight="26.0" prefWidth="243.0" promptText="Categoria Producto Id" />
      <TextField fx:id="tfNombre" layoutX="36.0" layoutY="228.0" prefHeight="26.0" prefWidth="243.0" promptText="Ingrese el nombre de la categoria" />
      <TextArea fx:id="taDescripcion" layoutX="35.0" layoutY="316.0" prefHeight="115.0" prefWidth="243.0" promptText="Ingrese la descripcion de la categoria" wrapText="true" />
      <GridPane layoutX="12.0" layoutY="472.0" prefHeight="89.0" prefWidth="278.0">
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <Button fx:id="btnGuardar" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="40.0" prefWidth="85.0" text="Guardar" GridPane.halignment="CENTER" />
            <Button fx:id="btnCancelar" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="40.0" prefWidth="85.0" text="Cancelar" GridPane.columnIndex="1" GridPane.halignment="CENTER" />
         </children>
      </GridPane>
   </children>
</AnchorPane>
