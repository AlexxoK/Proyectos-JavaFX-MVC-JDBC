<AnchorPane id="AnchorPane" prefHeight="750.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.diegomonterroso.controller.FormDetalleCompraController">
   <children>
      <ImageView fitHeight="750.0" fitWidth="500.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../image/Fondo%20DetalleCompra.png" />
         </image>
      </ImageView>
      <TextField fx:id="tfDetalleCompraId" editable="false" layoutX="35.0" layoutY="147.0" prefHeight="33.0" prefWidth="182.0" promptText="Detalle Compra Id" />
      <TextField fx:id="tfCantidad" layoutX="35.0" layoutY="228.0" prefHeight="34.0" prefWidth="165.0" promptText="Ingrese la cantidad" />
      <ComboBox fx:id="cmbProducto" layoutX="35.0" layoutY="311.0" prefHeight="34.0" prefWidth="166.0" />
      <ComboBox fx:id="cmbCompra" layoutX="34.0" layoutY="399.0" prefHeight="34.0" prefWidth="166.0" />
      <GridPane layoutX="17.0" layoutY="671.0" prefHeight="89.0" prefWidth="278.0">
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <Button fx:id="btnGuardar" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="40.0" prefWidth="85.0" text="Guardar" GridPane.halignment="CENTER" />
            <Button fx:id="btnRegresarForm" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="40.0" prefWidth="85.0" text="Regresar" GridPane.columnIndex="1" GridPane.halignment="CENTER" />
         </children>
      </GridPane>
   </children>
</AnchorPane>
